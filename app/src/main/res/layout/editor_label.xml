<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/food11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/local_dining_24"
            android:text="Food"
            android:paddingHorizontal="10dp"/>
        <Button
            android:id="@+id/tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/wallet_24"
            android:text="tax"
            android:paddingHorizontal="10dp"/>
        <Button
            android:id="@+id/health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/health_and_safety_24"
            android:text="Health"
            android:paddingHorizontal="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/menu_book_24"
            android:text="Education"
            android:paddingHorizontal="10dp"/>
        <Button
            android:id="@+id/trasport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/directions_bus_24"
            android:text="Transport"
            android:paddingHorizontal="10dp"/>
        <Button
            android:id="@+id/uang_jajan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/shopping_cart_24"
            android:text="Uang Jajan"
            android:paddingHorizontal="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/fitness_center_24"
            android:text="Sport"
            android:paddingHorizontal="10dp"/>
        <Button
            android:id="@+id/other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/payment_24"
            android:text="Other"
            android:paddingHorizontal="10dp"/>
        <Button
            android:id="@+id/shodaqoh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/moderator_24"
            android:text="Shodaqoh"
            android:paddingHorizontal="10dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_add_label"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add Label"/>

</LinearLayout>